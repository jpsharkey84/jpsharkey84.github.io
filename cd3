    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Crystal Glassway Terminal</title>
    <style>
        :root {
            --ff-blue: linear-gradient(180deg, #0000ad 0%, #00004a 100%);
            --ff-border: #ffffff;
            --ff-gold: #f7d308;
            --crystal-cyan: #00f2ff;
            --materia-magic: #00ff44;
            --materia-command: #ffff00;
            --materia-summon: #ff0000;
        }

        /* 1. RESET & BACKGROUND STAGE */
        body, html {
            margin: 0; padding: 0; width: 100%; height: 100%;
            background: #000; color: #fff;
            font-family: 'Courier New', Courier, monospace;
            overflow: hidden; display: flex; justify-content: center;
        }

        .stage {
            position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
            background: radial-gradient(circle at 50% 20%, #4a3018 0%, #000 85%);
            z-index: -1; perspective: 800px;
        }

        /* 2. THE INFINITE GLASSWAY FLOOR */
        .floor {
            position: absolute; bottom: -25%; left: -50%; width: 200%; height: 100%;
            background-image: 
                linear-gradient(var(--crystal-cyan) 1px, transparent 1px),
                linear-gradient(90deg, var(--crystal-cyan) 1px, transparent 1px);
            background-size: 70px 70px;
            transform: rotateX(70deg);
            animation: moveFloor 10s linear infinite;
            opacity: 0.25;
        }
        @keyframes moveFloor { 0% { background-position: 0 0; } 100% { background-position: 0 70px; } }

        /* 3. THE BREATHING SPIRES */
        .spire {
            position: absolute; bottom: 15%; width: 4px; height: 50vh;
            background: linear-gradient(to top, var(--crystal-cyan), transparent);
            box-shadow: 0 0 25px var(--crystal-cyan);
            animation: spireBreath 5s infinite ease-in-out;
        }
        .spire-left { left: 15%; animation-delay: 0s; }
        .spire-right { right: 15%; animation-delay: 2.5s; }

        @keyframes spireBreath {
            0%, 100% { transform: scaleY(1); opacity: 0.3; filter: blur(2px); }
            50% { transform: scaleY(1.3); opacity: 0.8; filter: blur(4px); }
        }

        /* 4. THE OG UI CONTAINER */
        .ui-main {
            width: 92%; max-width: 420px; z-index: 10;
            display: flex; flex-direction: column; gap: 12px;
            padding-top: 20px; height: 95vh;
        }

        .ff-window {
            background: var(--ff-blue);
            border: 3px double var(--ff-border);
            border-radius: 6px; padding: 12px;
            box-shadow: 0 0 0 2px #000, 8px 8px 20px rgba(0,0,0,0.7);
            animation: windowFloat 6s ease-in-out infinite;
        }
        @keyframes windowFloat { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-4px); } }

        .header-row {
            display: flex; justify-content: space-between;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            padding-bottom: 4px; margin-bottom: 10px;
            font-size: 0.75rem; letter-spacing: 1px; color: #aaa;
        }

        /* 5. INTERACTIVE TILES */
        .tile {
            background: rgba(0,0,0,0.4); border: 1px solid rgba(255,255,255,0.1);
            padding: 12px; margin-bottom: 10px; position: relative;
            box-shadow: inset 2px 2px 0px rgba(255,255,255,0.1);
        }

        .label { color: var(--ff-gold); font-size: 0.7rem; display: block; margin-bottom: 5px; }

        input, select {
            background: transparent; border: none; color: #fff;
            width: 100%; font-family: inherit; font-size: 1.1rem; outline: none;
            text-transform: uppercase; cursor: pointer;
        }

        /* 6. THE ☞ CURSOR FINGER */
        .cursor {
            position: absolute; left: -35px; top: 15px;
            font-size: 1.8rem; color: #fff;
            animation: fingerMove 0.5s infinite alternate;
            display: none; pointer-events: none;
        }
        .tile:focus-within .cursor, button:focus .cursor { display: block; }
        @keyframes fingerMove { from { transform: translateX(0); } to { transform: translateX(-8px); } }

        /* 7. MATERIA SYSTEM */
        .materia-row { display: flex; gap: 12px; margin-top: 8px; }
        .materia-slot {
            width: 22px; height: 22px; border-radius: 50%;
            border: 2px solid #fff; cursor: pointer; transition: 0.2s;
        }
        .materia-slot.magic { background: radial-gradient(circle, var(--materia-magic), #004411); box-shadow: 0 0 10px var(--materia-magic); }
        .materia-slot.command { background: radial-gradient(circle, var(--materia-command), #444400); box-shadow: 0 0 10px var(--materia-command); }
        .materia-slot.summon { background: radial-gradient(circle, var(--materia-summon), #440000); box-shadow: 0 0 10px var(--materia-summon); }
        .materia-slot.empty { background: rgba(255,255,255,0.1); border: 1px dashed #fff; }

        /* 8. BEACON INDICATOR */
        .mood-orb {
            width: 45px; height: 45px; margin: 5px auto;
            background: radial-gradient(circle, #ff9900, transparent);
            border-radius: 50%; box-shadow: 0 0 20px #ff6600;
            animation: orbPulse 3s infinite ease-in-out;
        }
        @keyframes orbPulse { 0%, 100% { opacity: 0.4; transform: scale(0.8); } 50% { opacity: 1; transform: scale(1.1); } }

        /* 9. THE SAVE BUTTON */
        .save-btn {
            margin-top: auto; background: #ddd; border: 4px outset #fff;
            padding: 18px; font-family: inherit; font-weight: bold;
            font-size: 1rem; text-transform: uppercase; cursor: pointer;
            box-shadow: 4px 4px 0px #222; margin-bottom: 25px;
        }
        .save-btn:active { border-style: inset; transform: translate(2px, 2px); box-shadow: 1px 1px 0px #222; }
    </style>
</head>
<body>

    <div class="stage">
        <div class="spire spire-left"></div>
        <div class="spire spire-right"></div>
        <div class="floor"></div>
    </div>

    <div class="ui-main">
        
        <div class="ff-window">
            <div class="header-row"><span>TERMINAL IDENTITY</span><span>[LV 99]</span></div>
            <div class="tile">
                <div class="cursor">☞</div>
                <span class="label">NAME ENTRY</span>
                <input type="text" value="CLOUD_STRIFE">
            </div>
            
            <div class="tile">
                <div class="cursor">☞</div>
                <span class="label">EQUIPMENT MATERIA (TAP SLOTS)</span>
                <div class="materia-row">
                    <div class="materia-slot magic" data-type="magic" onclick="cycleMateria(this)"></div>
                    <div class="materia-slot summon" data-type="summon" onclick="cycleMateria(this)"></div>
                    <div class="materia-slot command" data-type="command" onclick="cycleMateria(this)"></div>
                    <div class="materia-slot empty" data-type="empty" onclick="cycleMateria(this)"></div>
                </div>
            </div>
        </div>

        <div class="ff-window">
            <div class="header-row"><span>MOOD BEACON</span><span style="color:var(--ff-gold)">FLOW: ORANGE</span></div>
            <div class="tile" style="text-align: center;">
                <div class="mood-orb"></div>
                <div style="display:flex; justify-content: space-around; margin-top: 10px;">
                    <span style="color:var(--ff-gold); font-size: 0.8rem;">STEADY</span>
                    <span style="opacity: 0.5; font-size: 0.8rem;">ACTIVE</span>
                    <span style="opacity: 0.5; font-size: 0.8rem;">LOW</span>
                </div>
            </div>
        </div>

        <div class="ff-window" style="flex-grow: 1;">
            <div class="header-row"><span>INVENTORY DROPS</span></div>
            <div class="tile">
                <div class="cursor">☞</div>
                <div style="display:flex; justify-content:space-between;">
                    <span>ETHER CRYSTAL</span> <span style="color:var(--ff-gold)">x 99</span>
                </div>
            </div>
            <div class="tile">
                <div class="cursor">☞</div>
                <div style="display:flex; justify-content:space-between;">
                    <span>PHOENIX PIN</span> <span style="color:var(--ff-gold)">x 05</span>
                </div>
            </div>
        </div>

        <button class="save-btn" onclick="syncData(this)">
            Execute System Sync
        </button>

    </div>

    <script>
        // FUNCTION: Cycle Materia Colors
        function cycleMateria(el) {
            const types = ['empty', 'magic', 'command', 'summon'];
            let current = el.getAttribute('data-type');
            let nextIndex = (types.indexOf(current) + 1) % types.length;
            let nextType = types[nextIndex];
            
            el.setAttribute('data-type', nextType);
            el.className = 'materia-slot ' + nextType;
            
            // Interaction Feedback
            el.style.transform = 'scale(1.2)';
            setTimeout(() => el.style.transform = 'scale(1)', 150);
        }

        // FUNCTION: Button Sync Effect
        function syncData(btn) {
            const originalText = btn.innerText;
            btn.innerText = "SYNCING TERMINAL...";
            btn.style.filter = "invert(1)";
            
            setTimeout(() => {
                btn.innerText = "SYNC COMPLETE";
                btn.style.filter = "invert(0)";
                setTimeout(() => { btn.innerText = originalText; }, 2000);
            }, 1200);
        }
    </script>

</body>
</html>
